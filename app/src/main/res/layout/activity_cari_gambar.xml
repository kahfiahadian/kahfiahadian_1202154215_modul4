<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.telkomuniversity.student.kahfiahadian.kahfiahadian_1202154215_modul4.cariGambar">


    <TextView
        android:id="@+id/carigambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textSize="12pt"
        android:textColor="#FF0066"
        android:text="Cari Gambar" />

    <EditText
        android:id="@+id/urlgambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carigambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="masukan address URL gambar"
        android:textColor="#FF0066"/>

    <Button
        android:id="@+id/btncarigambar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urlgambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Cari bray"
        android:onClick="carigmbr"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncarigambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"/>
</RelativeLayout>
